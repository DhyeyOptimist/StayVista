

    <% layout('layouts/boilerplate') -%>



    <div class="row">
        <div class="col-8 offset-2"><br>
    <h3>Edit Existing Listing</h3>

            <br>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"  novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-1">
            <label for="title" class="form-label">Edit Title:
            </label>
        <input type="text" name="listing[title]" placeholder="Enter Property Title" class="form-control" value="<%=listing.title%>" required><br>
        </div>

        <div class="mb-1">
            <label for="description" class="form-label">Edit Description:</label>
        <textarea name="listing[description]" placeholder="Enter Property Description"  class="form-control" value="" required><%=listing.description%></textarea><br>
        </div>
<div class="mb-3"> current image: <br>
    <img src="<%=listing.image.url%>" style="height: 100px; width: auto;">
</div>
        <div class="mb-md-1">
            <label for="image" class="form-label">Upload New Image:</label>
        <input type="file" name="listing[image]" placeholder="Upload image file" class="form-control"   > <br>
        </div>

<!-- Price and country -->
        <div class="row">
        <div class="mb-1 col-md-4">
            <label for="price" class="form-label">Edit Price:</label>
        <input type="number" name="listing[price]" placeholder="Enter Property Price" class="form-control" value="<%=listing.price%>" required><br>


        </div>
        <div class="mb-1 col-8">
            <label for="country" class="form-label">Edit Country:</label>
        <input type="text" name="listing[country]" placeholder="Enter Property Country" class="form-control" value="<%=listing.country%>" required><br>


        </div>
    </div>

        <div class="mb-1">
            <label for="location" class="form-label">Add Location:</label>
        <input type="text" name="listing[location]" placeholder="Enter Property Location" class="form-control" value="<%=listing.country%>" required><br>
        </div>
        <button type="submit" class="btn btn-dark">Final Edit</button>
        <br><br>
    </form>
</div>
</div>
<script src="/js/script.js"></script>
