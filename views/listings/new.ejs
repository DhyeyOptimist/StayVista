<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Create a new Listing</h3><br>

    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-1">
            <label for="title" class="form-label">Title:
            </label>
            <input type="text" name="listing[title]" placeholder="Enter Property Title" class="form-control" required><br><br>
        </div>

        <div class="mb-1">
            <label for="description" class="form-label">Description:</label>
                <textarea name="listing[description]" placeholder="Enter Property Description"  class="form-control" required></textarea><br>
        </div>

        <div class="bm-3">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image]" type="file" class="form-control">

        </div>

        <!-- <div class="mb-md-1">
            <label for="image" class="form-label">Add Image URL:</label>
            <input type="text" name="listing[image]" placeholder="Enter Property Image URL" class="form-control"><br>
        </div> -->
<!-- Price and country -->
        <div class="row">
        <div class="mb-1 col-md-4">
            <label for="price" class="form-label">Add Price:</label>
        <input  name="listing[price]" placeholder="Enter Property Price" class="form-control" required><br>

        </div>
        <div class="mb-1 col-8">
            <label for="country" class="form-label">Add Country:</label>
            <input type="text" name="listing[country]" placeholder="Enter Property Country" class="form-control" required><br>

        </div>
    </div>

        <div class="mb-1">
            <label for="location" class="form-label">Add Location:</label>
        <input type="text" name="listing[location]" placeholder="Enter Property Location" class="form-control" required><br>

        </div>
        <button type="submit"  class="btn btn-dark">Add Listing</button>
        <br><br>
    </form>
</div>
</div>